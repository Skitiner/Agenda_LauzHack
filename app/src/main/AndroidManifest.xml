<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ludiostrix.organise_mois">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/organisemois"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/organisemois"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".popupActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".AgendaActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".RemindBroadcast" />
        <receiver android:name=".Broadcast_work" />
        <receiver android:name=".Broadcast_sport" />
        <receiver android:name=".Broadcast_work_catch_up" />
        <receiver android:name=".Broadcast_sport_catch_up" />
        <receiver android:name=".Broadcast_eat" />
        <receiver android:name=".Broadcast_sleep" />
        <receiver android:name=".Broadcast_wake_up" />
        <receiver android:name=".Broadcast_break" />
        <receiver android:name=".Cancel_broadcast" />
        <receiver android:name=".Start_broadcast" />
        <receiver android:name=".Postpone_broadcast" />
        <receiver android:name=".Broadcast_new_event" />
    </application>

</manifest>